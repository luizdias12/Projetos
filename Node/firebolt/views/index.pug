extends layout
  
block content
 div(class="card mx-auto mt-4" style="width: 25rem;")
  article(class="card-body shadow")
   h4(class="card-title text-center mb-4 mt-1") Login
   hr       
   form(id="frm-login" action=)
   div.form-group.my-2
    div.input-group
     span.input-group-text
      i(class="fas fa-user")
     input(name="user_login" id="user" class="form-control" placeholder="Usuario" type="text")
   div.form-group.my-2
    div.input-group
     span.input-group-text
      i(class="fas fa-lock")
     input(name="pass_login" id="pass" class="form-control" placeholder="******" type="password")
     span.input-group-text
      i(class="fas fa-eye")
   div.form-group.my-2
    div(class="d-grid gap-2 my-2")
     button(type="button" class="btn btn-primary btn-block mx-auto") Acessar 
      i(class="fa-solid fa-arrow-right-to-bracket") 
   // p.text-center
     a(href="#" class="text-danger") Esqueci a Senha!
    p.text-center
     a(href="#" class="text-danger") Nao possui cadastro, clique aqui!



